<Window x:Class="AxisConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:views="clr-namespace:AxisConfigurator.Views"
        xmlns:viewModels="clr-namespace:AxisConfigurator.ViewModels"
        xmlns:local="clr-namespace:AxisConfigurator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid Background="White">
        <Button x:Name="ConnectButton" Content="Connect" Click="Button_Click" Background="#FF909090" Height="25" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TabControl x:Name="MainTabControl" Grid.Column="0" Margin="0,25,0,0" SelectionChanged="MyTabControl_SelectionChanged" SelectedIndex="1">
            <TabItem Header="Status" Name="Status">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="LED" Name="LED" HorizontalAlignment="Center" Width="32">
                <views:LedView/>
            </TabItem>
            <TabItem Header="TabItem" Name="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
